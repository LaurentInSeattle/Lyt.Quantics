<UserControl
	x:Class="Lyt.Quantics.Studio.Workflow.Run.Dialogs.SaveDialog"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:vm="clr-namespace:Lyt.Quantics.Studio.Workflow.Run.Dialogs"
    x:DataType="vm:SaveDialogModel" 
	xmlns:glyphs="clr-namespace:Lyt.Avalonia.Controls.Glyphs;assembly=Lyt.Avalonia.Controls"
	xmlns:toggle="clr-namespace:Lyt.Avalonia.Controls.Toggle;assembly=Lyt.Avalonia.Controls"
    xmlns:theme="clr-namespace:Lyt.Quantics.Studio"
	>
	<Grid
		Width="680" Height="400"
		Background="Transparent"
		>
		<Rectangle
			Fill="#C0000020"
			Grid.ColumnSpan="999" Grid.RowSpan="999"
			RadiusX="4" RadiusY="4"
			Margin="1"
			/>
		<Border
			Margin ="1"
			BorderThickness="1.0"
			BorderBrush="{StaticResource ResourceKey= LightAqua_2_100}"
			Background="Transparent"
			>
			<Grid
				>
				<Grid.RowDefinitions>
					<RowDefinition Height="4"/>
					<RowDefinition Height="56"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Rectangle
					Grid.Row="0"
					VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
					Fill="{StaticResource ResourceKey= OrangePeel_2_080}"
					/>
				<Rectangle
					Grid.Row="1"
					VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
					Fill="#60202040"
					/>
				<Rectangle
					Grid.Row="1"
					Height="1"
					VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
					Fill="#F0302070"
					/>
				<TextBlock
					Grid.Row="1" Grid.Column="0"
					Text="{Binding Title}"
					HorizontalAlignment="Left" VerticalAlignment="Center"
					Margin="20 -8 0 0"
					FontSize="26"
					Foreground="{StaticResource LightAqua_0_080}"
					TextWrapping="Wrap"
					/>
				<!--Toolbar -->
				<Grid
					Grid.Row="1"
					HorizontalAlignment="Right" VerticalAlignment="Center"
					Margin="0 0 12 0"
					>
					<Grid.ColumnDefinitions>
						<!-- Spacer -->
						<ColumnDefinition Width="4" />
						<!-- Overwite Save -->
						<ColumnDefinition Width="100" />
						<!-- Spacer -->
						<ColumnDefinition Width="4" />
						<!-- Save As -->
						<ColumnDefinition Width="100" />
						<!-- Spacer -->
						<ColumnDefinition Width="4" />
						<!-- Dismiss -->
						<ColumnDefinition Width="72" />
					</Grid.ColumnDefinitions>
					<glyphs:GlyphButton
						x:Name="SaveOverwriteButton"
						Grid.Column="1"
						Style="{StaticResource ToolbarIconButton}"
						Behaviour="Tap"
						HorizontalAlignment="Center" VerticalAlignment="Center"
						Width="92" Height="48"
						Margin="4"
						GlyphSource="save"
						ButtonBackground="BorderlessRectangle"
						GlyphStrokeThickness="0"
						Text="Overwrite Save"
						Command="{Binding OverwriteCommand}"
						IsDisabled="{Binding !FormIsValid}"
	    				/>
					<glyphs:GlyphButton
						x:Name="SaveAsButton"
						Grid.Column="3"
						Style="{StaticResource ToolbarIconButton}"
						Behaviour="Tap"
						HorizontalAlignment="Center" VerticalAlignment="Center"
						Width="92" Height="48"
						Margin="4"
						GlyphSource="save_copy"
						ButtonBackground="BorderlessRectangle"
						GlyphStrokeThickness="0"
						Text="Save As"
						Command="{Binding SaveCommand}"
						IsDisabled="{Binding !FormIsValid}"
	    				/>
					<glyphs:GlyphButton
						Grid.Column="5"
						Style="{StaticResource ToolbarIconButton}"
						Behaviour="Tap"
						HorizontalAlignment="Center" VerticalAlignment="Center"
						Width="64" Height="48"
						Margin="4"
						GlyphSource="dismiss"
						ButtonBackground="BorderlessRectangle"
						GlyphStrokeThickness="0"
						Text="Cancel"
						Command="{Binding CancelCommand}"
				    	/>
				</Grid>

				<!--Content -->
				<Grid
					x:Name="InnerGrid"
					Grid.Row="2"
					ShowGridLines="False"
					>
					<Grid.RowDefinitions>
						<!-- Fields -->
						<RowDefinition Height="32" />
						<RowDefinition Height="44" />
						<RowDefinition Height="32" />
						<RowDefinition Height="*" />
						<!-- Message -->
						<RowDefinition Height="40" />
					</Grid.RowDefinitions>
					<TextBlock
						Grid.Row="0"
						VerticalAlignment="Center" HorizontalAlignment="Stretch"
						TextAlignment="Left"
						Foreground="{StaticResource LightAqua_0_080}"
						Text="Computer Name"
						FontStyle="Italic"
						FontSize="14"
						Margin="6 0 0 0"
						IsHitTestVisible="False"
					    />
					<TextBox
						x:Name="NameTextBox"
						FontFeatures="-calt"
						Grid.Row="1"
						VerticalAlignment="Center" HorizontalAlignment="Stretch"
						Watermark="A name for this computer"
						MaxLength="64"
						Text="{Binding Name}"
						Margin="16 0 8 0"
						/>
					<TextBlock
						Grid.Row="2"
						VerticalAlignment="Center" HorizontalAlignment="Stretch"
						TextAlignment="Left"
						Foreground="{StaticResource LightAqua_0_080}"
						Text="Description"
						FontStyle="Italic"
						FontSize="14"
						Margin="6 0 0 0"
						IsHitTestVisible="False"
						/>
					<TextBox
						x:Name="DescriptionTextBox"
						FontFeatures="-calt"
						Grid.Row="3"
						VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
						Watermark="What this this computer is doing? "
						MaxLength="1050"
						Text="{Binding Description}"
						Margin="16 0 8 0"
						AcceptsReturn="True"
						/>
					<TextBlock
						Grid.Row="4"
						VerticalAlignment="Center" HorizontalAlignment="Stretch"
						TextAlignment="Left"
						Foreground="{StaticResource OrangePeel_0_100}"
						Text="{Binding ValidationMessage}"
						FontStyle="Italic"
						FontSize="16"
						Margin="16 0 8 0"
						IsHitTestVisible="False"
						TextWrapping="Wrap"
			            />
				</Grid>
			</Grid>
		</Border>
	</Grid>
</UserControl>
