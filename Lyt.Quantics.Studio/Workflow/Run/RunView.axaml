<UserControl 
	x:Class="Lyt.Quantics.Studio.Workflow.Run.RunView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="1080" d:DesignHeight="450"
    xmlns:vm="clr-namespace:Lyt.Quantics.Studio.Workflow.Run"
    xmlns:header="clr-namespace:Lyt.Quantics.Studio.Controls"
    x:DataType="vm:RunViewModel" 
    xmlns:theme="clr-namespace:Lyt.Quantics.Studio"
	>
	<Grid
		Margin="4"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="320" />
		</Grid.RowDefinitions>
		<Grid
			Grid.Row="0"
			>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<ContentControl
				Grid.Column="0"
				Content="{Binding Gates}"
				/>
			<ContentControl
				Grid.Column="1"
				Content="{Binding Computer}"
				/>
			<ContentControl
				Grid.Column="2"
				Content="{Binding Code}"
				/>
		</Grid>
		<ContentControl
			Grid.Row="1"
			Content="{Binding Amplitudes}"
			/>
	</Grid>
</UserControl>
