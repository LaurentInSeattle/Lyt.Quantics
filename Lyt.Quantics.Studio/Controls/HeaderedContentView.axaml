<UserControl 
    x:Class="Lyt.Quantics.Studio.Controls.HeaderedContentView"
	xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	xmlns:glyphs="clr-namespace:Lyt.Avalonia.Controls.Glyphs;assembly=Lyt.Avalonia.Controls"
    xmlns:vm="clr-namespace:Lyt.Quantics.Studio.Controls"
    xmlns:header="clr-namespace:Lyt.Quantics.Studio.Controls"
    x:DataType="vm:HeaderedContentViewModel" 
    xmlns:theme="clr-namespace:Lyt.Quantics.Studio"
	>
	<Grid>
		<!-- Expanded Layout-->
		<Border
			IsVisible="{Binding IsExpanded}"
			Margin ="1"
			BorderThickness="1.0"
			BorderBrush="{StaticResource ResourceKey= LightAqua_2_100}"
			Background="Transparent"
			>		
			<Grid
				>
				<Grid.RowDefinitions>
					<RowDefinition Height="4"/>
					<RowDefinition Height="60"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Rectangle
					Grid.Row="0"
					VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
					Fill="{StaticResource ResourceKey= OrangePeel_2_080}"
					/>
				<Rectangle
					Grid.Row="1"
					VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
					Fill="#60202040"
					/>
				<Rectangle
					Grid.Row="1"
					Height="1"
					VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
					Fill="#F0302070"
					/>
				<glyphs:GlyphButton
					IsVisible="{Binding IsCollapseVisible}"
					Grid.Row="1"
					Style="{StaticResource ToolbarIconButton}"
					Behaviour="Tap"
					HorizontalAlignment="Left" VerticalAlignment="Center"
					Width="52" Height="52"
					Margin="4"
					GlyphSource="{Binding CollapseIconSource}"
					ButtonBackground="BorderlessRectangle"
					GlyphStrokeThickness="0"
					Text="Collapse"
					Command="{Binding CollapseCommand}"
	    			/>
				<TextBlock
					Grid.Row="1" Grid.Column="0"
					Text="{Binding Title}"
					HorizontalAlignment="Left" VerticalAlignment="Center"
					Margin="80 -8 0 0"
					FontSize="26"
					Foreground="{StaticResource LightAqua_0_080}"
					TextWrapping="Wrap"
					/>
				<ContentControl
					x:Name="ToolbarContent"
					Grid.Row="1"
					HorizontalAlignment="Right" VerticalAlignment="Center"
					Margin="0 0 12 0"
					Content="{Binding Toolbar}"
					/>
				<ContentControl
					x:Name="ExpandedContent"
					Grid.Row="2"
					Content="{Binding ContentView}"
					VerticalAlignment="Stretch"
					/>
			</Grid>
		</Border>
		
		<!-- Side Collapsed Layout-->
		<Border
			IsVisible="{Binding IsSideCollapsed}"
			Margin ="1"
			BorderThickness="1.0"
			BorderBrush="{StaticResource ResourceKey= LightAqua_2_100}"
			Background="Transparent"
			Width="60"
			>
			<Grid
				>
				<Grid.RowDefinitions>
					<RowDefinition Height="4"/>
					<RowDefinition Height="60"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Rectangle
					Grid.Row="0"
					VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
					Fill="{StaticResource ResourceKey= OrangePeel_2_080}"
					/>
				<Rectangle
					Grid.Row="1"
					VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
					Fill="#60202040"
					/>
				<Rectangle
					Grid.Row="1"
					Height="1"
					VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
					Fill="#F0202060"
					/>
				<glyphs:GlyphButton
					Grid.Row="1"
					Style="{StaticResource ToolbarIconButton}"
					Behaviour="Tap"
					HorizontalAlignment="Center" VerticalAlignment="Center"
					Width="52" Height="52"
					Margin="4"
					GlyphSource="{Binding ExpandIconSource}"
					ButtonBackground="BorderlessRectangle"
					GlyphStrokeThickness="0"
					Text="Expand"
					Command="{Binding ExpandCommand}"
	    			/>
				<TextBlock
					Grid.Row="2" Grid.Column="0"
					Text="{Binding Title}"
					HorizontalAlignment="Center" VerticalAlignment="Center"
					Margin="0 0 0 120"
					FontSize="22"
					Width="300"
					Foreground="{StaticResource LightAqua_0_080}"
					>
					<TextBlock.RenderTransform>
						<RotateTransform Angle="270" />
					</TextBlock.RenderTransform>
				</TextBlock>
			</Grid>
		</Border>

		<!-- Updown Collapsed Layout-->
		<Border
			IsVisible="{Binding IsUpdownCollapsed}"
			Margin ="1"
			BorderThickness="1.0"
			BorderBrush="{StaticResource ResourceKey= LightAqua_2_100}"
			Background="Transparent"
			>
			<Grid
				>
				<Grid.RowDefinitions>
					<RowDefinition Height="4"/>
					<RowDefinition Height="60"/>
				</Grid.RowDefinitions>
				<Rectangle
					Grid.Row="0"
					VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
					Fill="{StaticResource ResourceKey= OrangePeel_2_080}"
					/>
				<Rectangle
					Grid.Row="1"
					VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
					Fill="#60202040"
					/>
				<Rectangle
					Grid.Row="1"
					Height="1"
					VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
					Fill="#F0202060"
					/>
				<glyphs:GlyphButton
					Grid.Row="1"
					Style="{StaticResource ToolbarIconButton}"
					Behaviour="Tap"
					HorizontalAlignment="Left" VerticalAlignment="Center"
					Width="52" Height="52"
					Margin="4"
					GlyphSource="{Binding ExpandIconSource}"
					ButtonBackground="BorderlessRectangle"
					GlyphStrokeThickness="0"
					Text="Expand"
					Command="{Binding ExpandCommand}"
	    			/>
				<TextBlock
					Grid.Row="1" Grid.Column="0"
					Text="{Binding Title}"
					HorizontalAlignment="Left" VerticalAlignment="Center"
					Margin="80 -8 0 0"
					FontSize="26"
					Foreground="{StaticResource LightAqua_0_080}"
					TextWrapping="Wrap"
					/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
