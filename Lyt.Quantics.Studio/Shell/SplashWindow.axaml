<Window
    x:Class="Lyt.Quantics.Studio.Shell.SplashWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	WindowStartupLocation="CenterScreen"
	SystemDecorations="None"
	ShowInTaskbar="False"
	WindowState="Normal"
	Width="800" Height="450"
	Background="Transparent"
    >
	<!-- Palette is not loaded yet: We can only use hard coded colours-->
	<Grid>
		<Image
			x:Name="Image"
			Stretch="UniformToFill"
            Source="\Assets\Images\dark.jpg"
			Opacity="1"
			/>
		<Rectangle
			Fill="#30000010"
			Stretch="Fill"
			/>
		<TextBlock
			Text="Welcome to"
			Margin="60 60 0 0 "
			FontSize="26"
			Foreground="#ECfac8b2"
			/>
		<TextBlock
			Text="Quantics Studio"
			Margin="120 160 0 0 "
			FontSize="74"
			FontWeight="DemiBold"
			Foreground="#FFa8efff"
			/>
		<TextBlock
			Text="Loading, please wait..."
			Margin="480 340 0 0 "
			FontSize="26"
			Foreground="#ECfac8b2"
			/>
	</Grid>
</Window>
